{
  "comment": "Example: Resume simulation from checkpoint",
  "comment_instructions": [
    "1. Replace 'YOUR_RUN_DIRECTORY' with actual run directory (e.g., run_20251101_143000)",
    "2. Replace 'YOUR_CHECKPOINT_TIME' with actual checkpoint time (e.g., 0.123456)",
    "3. Run: ./sph1d <simulation_name> example_resume_config.json"
  ],
  
  "SPHType": "disph",
  "gamma": 1.4,
  "neighborNumber": 50,
  "kernel": "cubic_spline",
  "iterative_sml": true,
  
  "startTime": 0.0,
  "endTime": 0.2,
  "outputInterval": 0.02,
  
  "cflSound": 0.3,
  "cflForce": 0.25,
  "alpha": 1.0,
  "useBalsaraSwitch": true,
  "useTimeDependentAV": false,
  
  "comment_resume": "Resume from checkpoint - UPDATE PATHS BELOW!",
  "resumeFromCheckpoint": true,
  "resumeCheckpointFile": "output/YOUR_RUN_DIRECTORY/checkpoints/checkpoint_tYOUR_CHECKPOINT_TIME.chk",
  
  "comment_continue_checkpointing": "Continue checkpointing after resume",
  "enableCheckpointing": true,
  "checkpointInterval": 0.05,
  "checkpointMaxKeep": 3,
  "checkpointOnInterrupt": true
}
